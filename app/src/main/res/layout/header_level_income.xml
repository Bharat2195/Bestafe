<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSrNo"
            android:textSize="14sp"
            android:background="@android:color/holo_blue_dark"
            android:text="Sr.No"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/txtEntryDate"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="EntryDate"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="50dp" />


        <TextView
            android:id="@+id/txtFromId"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="From Id"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/txtFromName"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="From Name"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/txtLevelNo"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="Level No."
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/txtStatus"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="Status"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/txtAmount"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="Amount"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="50dp" />


        <TextView
            android:id="@+id/txtOrderNo"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="Order No"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="50dp" />


    </LinearLayout>


</RelativeLayout>
