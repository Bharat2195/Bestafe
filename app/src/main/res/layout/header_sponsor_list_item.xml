<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSrNo"
            android:textSize="14sp"
            android:background="@android:color/holo_blue_dark"
            android:text="Sr.No"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/txtMemberID"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="MemberID  "
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="50dp" />


        <TextView
            android:id="@+id/txtMemberName"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="Member Name"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/txtMobile"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="Mobile"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/txtJoiningDate"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="Joining Date"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="50dp" />


        <TextView
            android:id="@+id/txtActivationDate"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@android:color/holo_blue_dark"
            android:text="Activation Date"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="120dp"
            android:layout_height="50dp" />


    </LinearLayout>


</RelativeLayout>
