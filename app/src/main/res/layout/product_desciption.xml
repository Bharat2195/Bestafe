<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/liner_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:textAlignment="center"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtDescription"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:text="Descitpion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_marginTop="10dp"
            android:text="Price"
            android:textColor="@android:color/holo_red_light"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtSpecialPrice"
            android:layout_marginTop="10dp"
            android:text="SpecialPrice"
            android:visibility="gone"
            android:textSize="25sp"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/txtPv"
            android:layout_marginTop="10dp"
            android:text="PV"
            android:textColor="@android:color/holo_red_light"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_below="@+id/liner_layout"
        android:elevation="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ln_Color"
                android:background="#f3f3f4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtColor"
                    android:text="Color, Size"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:textColor="#4c505b"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtSelect"
                    android:text="Select"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:layout_margin="10dp"
                    android:textColor="@android:color/holo_blue_light"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_Cart"
                android:layout_below="@+id/ln_Color"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnHome"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:foreground="#f3f3f4"
                    android:background="@drawable/ic_store_md_orange"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />

                <Button
                    android:id="@+id/btnCart"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="ADD TO CART"
                    android:textStyle="bold"
                    android:background="#ffdad7"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="120dp"
                    android:layout_height="50dp" />

                <!--<Button-->
                    <!--android:id="@+id/btnBuyNow"-->
                    <!--android:padding="10dp"-->
                    <!--android:layout_margin="5dp"-->
                    <!--android:text="BUY NOW"-->
                    <!--android:layout_weight="1"-->
                    <!--android:textStyle="bold"-->
                    <!--android:background="@android:color/holo_red_light"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:layout_width="120dp"-->
                    <!--android:layout_height="50dp" />-->







            </LinearLayout>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>